


@import 'base/_mixins.styl'
@import 'base/_variables.styl'
@import 'base/_normalize.styl'

@import 'components/main/_header.styl'


*
	box-sizing border-box
html
	font-size rootFontSize
#root
	display flex
	flex-direction column
	min-height 100vh
body
	margin 0
	padding 0
	font-family fontStack
	font-size baseFontSize
	line-height 1.4
	color #000
	overflow-x hidden
	&.noScroll
		overflow-y hidden
main
	width 100%
	font-size baseFontSize
	flex-grow 1
	background #fff
.container
	width 100%
	margin 0 auto
	padding 0 20px
	max-width 1216px
a
	text-decoration none
fieldset
	border 0
	padding 0
label
	display block
	font-weight 600
	font-size 1.4rem
	margin-bottom 10px
	&.radioLabel
		margin-bottom 20px
.hidden, hidden
	display none!important
fieldset
	padding 0
	margin 20px 0
	border 0


// Swiper Custom

.sliderNext, .sliderPrev
	width 50px
	height 50px
	background #fff
	position absolute
	z-index 9
	display inline-flex
	align-items center
	justify-content center
	cursor pointer
	left 20px
	right auto
	+mq(small)
		left 0
.sliderNext + .sliderPrev
	border-bottom solid 1px #122B56
.swiper-button-next:after,
.swiper-button-prev:after
	font-size 20px
	color #B1B7B9
.sliderNext
	top calc(43% + 25px)
.sliderPrev
	top calc(43% - 25px)
.mySwiper .swiper-slide-thumb-active
	border 1px solid rgba(0, 0, 0, 0.24)
	

